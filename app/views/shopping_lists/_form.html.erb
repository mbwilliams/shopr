<%= form_for @shopping_list do |f| %>

  <%= render 'shared/form_errors', resource: @shopping_list %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :purchase_date %><br>
    <%= f.date_field :purchase_date %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
